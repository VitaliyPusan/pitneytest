        <Label Name="LblUserId" Content="User Id:" HorizontalContentAlignment="Right" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="69"/>
        <TextBox Name="TxtUserIdTxt" Height="23" Margin="84,12,10,0" TextWrapping="Wrap" Text="950f9e6a-2ce9-44f2-9f25-31e5caad60a0@pb" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
